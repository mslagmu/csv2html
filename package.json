{
  "name": "csv2table",
  "displayName": "csv2table",
  "description": "translate a csv into Html Table",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "repository": {},
  "contributes": {
    "commands": [
      {
        "command": "csv2table.toHTML",
        "title": "Transform to HTML Table",
        "category": "csv2table"
      }
    ],
    "configuration":[
      {
        "title": "csv2table",
        "properties": {
          "csv2table.delimiter" : {
            "type" : "string",
            "default": ";",
            "description" : "Delimiter between cells"
          },
          "csv2table.header" : {
            "type" : "boolean",
            "default": false,
            "description" : "The first line is a header line"
          }
        }
      }
    ],
    "keybindings": [
			{
				"key": "ctrl+h ctrl+t",
				"command": "csv2table.toHTML",
				"mac": "cmd+h cmd+t",
				"when": "editorTextFocus && editorLangId == html"
			}
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
